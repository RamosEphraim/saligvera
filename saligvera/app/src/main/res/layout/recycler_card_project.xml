<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/projtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/icon"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:maxLines="4"
                android:text="Project Title"
                android:textColor="#222"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/architect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/projtitle"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:maxLines="5"
                android:text="Engineer / Architect"
                android:textColor="#666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/architect"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:maxLines="3"
                android:text="Start Date"
                android:textColor="#666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/startdate"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:maxLines="3"
                android:text="End Date"
                android:textColor="#666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/enddate"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:maxLines="3"
                android:text="Budget"
                android:textColor="#666"
                android:textSize="14dp" />



            <LinearLayout
                android:id="@+id/viewing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/budget"
                android:gravity="end">
                <Button
                    android:id="@+id/btnviewchecklist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Checklist"
                    android:theme="@style/PrimaryFlatButton" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/myProgress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/viewing"
                android:minHeight="50dip"
                android:progress="50"
                android:progressDrawable="@drawable/myprogressbar"/>

            <TextView
                android:id="@+id/progresstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignLeft="@id/myProgress"
                android:layout_alignTop="@id/myProgress"
                android:layout_alignRight="@id/myProgress"
                android:layout_alignBottom="@id/myProgress"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="50%"
                android:gravity="center"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>