<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supply Name"
        android:id="@+id/txtSupplyRequest"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[ 10 ]"
        android:id="@+id/txtSupplyRequestQuantity"
        android:layout_toEndOf="@id/txtSupplyRequest"
        android:layout_marginStart="5dp"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supply Description"
        android:layout_below="@id/txtSupplyRequest"
        android:id="@+id/txtSupplyRequestDesc"
        android:textSize="13sp"
        android:textColor="@color/colorBlack"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawableTint="@color/colorWhite"
        android:backgroundTint="@color/colorPrimary"
        android:text="Remove"
        android:textColor="@color/colorWhite"
        android:id="@+id/btnRemove"
        android:textSize="12sp"
        android:padding="10dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_delete_black_24dp"
        />


</RelativeLayout>